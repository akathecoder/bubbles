{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs postgres",
    "db:psql": "docker-compose exec postgres psql -U $PG_USER -d $PG_DATABASE",
    "db:init": "docker-compose exec -T postgres psql -U $PG_USER -d $PG_DATABASE -f src/db/create-tables.sql"
  },
  "dependencies": {
    "@1inch/cross-chain-sdk": "^1.0.2",
    "@hono/node-server": "^1.19.4",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "hono": "^4.9.8",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "viem": "^2.37.8",
    "web3": "^4.16.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
